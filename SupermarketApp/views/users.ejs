<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Users</title>
  <style>
    :root {
      --bg: #f5f7fb;
      --panel: #ffffff;
      --muted: #6b7280;
      --accent: #f59e0b;
      --accent-2: #2563eb;
      --danger: #dc2626;
      --success: #16a34a;
      --text: #111827;
      --border: #e5e7eb;
    }
    body {
      background: var(--bg);
      color: var(--text);
    }
    .users-shell {
      background: var(--panel);
      border-radius: 12px;
      padding: 18px;
      box-shadow: 0 15px 30px rgba(0,0,0,0.35);
      border: 1px solid var(--border);
    }
    .toolbar {
      display: grid;
      grid-template-columns: 1fr auto;
      gap: 12px;
      align-items: center;
      margin-bottom: 14px;
    }
    .toolbar-left {
      display: flex;
      gap: 8px;
      flex-wrap: wrap;
      align-items: center;
    }
    .toolbar-right {
      display: flex;
      gap: 8px;
      flex-wrap: wrap;
      justify-content: flex-end;
    }
    .input-ghost, .select-ghost {
      background: #f9fafb;
      border: 1px solid var(--border);
      color: var(--text);
      height: 38px;
      padding: 0 12px;
      border-radius: 8px;
      transition: border-color 0.2s, box-shadow 0.2s;
    }
    .input-ghost:focus, .select-ghost:focus {
      outline: none;
      border-color: var(--accent-2);
      box-shadow: 0 0 0 3px rgba(79,195,247,0.25);
    }
    .btn-ghost {
      border: 1px solid var(--border);
      background: #1f1f1f;
      color: var(--text);
      border-radius: 8px;
      padding: 8px 14px;
      transition: all 0.2s;
    }
    .btn-ghost:hover {
      border-color: var(--accent-2);
      color: var(--accent-2);
    }
    .btn-primary-modern {
      background: linear-gradient(135deg, #ff7b2f, #ffb347);
      border: none;
      color: #1f1f1f;
      font-weight: 700;
      border-radius: 10px;
      padding: 9px 16px;
      box-shadow: 0 10px 20px rgba(255,123,47,0.35);
    }
    .users-table {
      margin: 0;
      color: var(--text);
    }
    .users-table thead th {
      background: #f9fafb;
      border: none;
      color: #4b5563;
      font-weight: 600;
      padding: 12px 10px;
    }
    .users-table tbody td {
      background: transparent;
      border-top: 1px solid var(--border);
      vertical-align: middle;
      padding: 12px 10px;
    }
    .users-table tbody tr:hover td {
      background: #f3f4f6;
    }
    .pill {
      display: inline-flex;
      align-items: center;
      padding: 4px 10px;
      border-radius: 999px;
      font-size: 12px;
      font-weight: 600;
      letter-spacing: 0.2px;
    }
    .pill-admin { background: rgba(220,38,38,0.12); color: #991b1b; border: 1px solid rgba(220,38,38,0.25); }
    .pill-user { background: rgba(37,99,235,0.12); color: #1d4ed8; border: 1px solid rgba(37,99,235,0.25); }
    .actions {
      display: flex;
      gap: 6px;
      flex-wrap: wrap;
    }
    .btn-outline-light.btn-sm {
      border-color: var(--border);
      color: var(--text);
    }
    .btn-outline-light.btn-sm:hover {
      border-color: var(--accent-2);
      color: var(--accent-2);
    }
    .pagination-sm .page-link {
      background: #f9fafb;
      color: var(--text);
      border-color: var(--border);
    }
    .pagination-sm .page-link:hover {
      border-color: var(--accent-2);
      color: var(--accent-2);
    }
    .mini-meta {
      color: var(--muted);
      font-size: 12px;
    }
    .form-control-sm, .form-select-sm {
      background: #fff;
      border: 1px solid var(--border);
      color: var(--text);
    }
    .form-control-sm:focus, .form-select-sm:focus {
      border-color: var(--accent-2);
      box-shadow: 0 0 0 3px rgba(79,195,247,0.2);
    }
  </style>
</head>
<body>
  <%- include('navbar') %>

  <div class="container my-4">
    <div class="d-flex justify-content-between align-items-center mb-3 flex-wrap gap-2">
      <h2 class="mb-0">User Management</h2>
      <div class="d-flex gap-2 flex-wrap">
        <a href="/register" class="btn btn-primary-modern btn-sm text-decoration-none d-inline-flex align-items-center gap-1">
          <span>+ New User</span>
        </a>
      </div>
    </div>

    <% if (messages && messages.error && messages.error.length) { %>
      <div class="alert alert-danger">
        <% messages.error.forEach(function(msg) { %>
          <div><%= msg %></div>
        <% }) %>
      </div>
    <% } %>
    <% if (messages && messages.success && messages.success.length) { %>
      <div class="alert alert-success">
        <% messages.success.forEach(function(msg) { %>
          <div><%= msg %></div>
        <% }) %>
      </div>
    <% } %>

    <div class="d-none">
      <% users.forEach(function(u) { %>
        <form id="edit-<%= u.id %>" action="/users/<%= u.id %>/edit" method="POST"></form>
      <% }) %>
    </div>

    <div class="users-shell">
      <div class="toolbar">
        <div class="toolbar-left">
          <input id="user-search" class="input-ghost" type="search" placeholder="Search items...">
          <select id="permission-filter" class="select-ghost">
            <option value="all">Permissions: All</option>
            <option value="admin">Admin</option>
            <option value="user">User</option>
          </select>
        </div>
        <div class="toolbar-right mini-meta">
          Joined Anytime
        </div>
      </div>

      <div class="table-responsive">
        <table class="table users-table align-middle" id="users-table">
          <thead>
            <tr>
              <th style="width:38px;"><input type="checkbox" onclick="toggleAll(this)"></th>
              <th>Full Name</th>
              <th>Email Address</th>
              <th>Contact</th>
              <th>Address</th>
              <th>Permissions</th>
              <th style="width: 240px;">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% users.forEach(function(u) { 
                 const editFormId = `edit-${u.id}`;
            %>
              <tr data-role="<%= u.role %>">
                <td><input type="checkbox"></td>
                <td>
                  <input form="<%= editFormId %>" type="text" name="username" class="form-control form-control-sm" value="<%= u.username %>" required readonly>
                  <div class="mini-meta">ID: <%= u.id %></div>
                </td>
                <td><input form="<%= editFormId %>" type="email" name="email" class="form-control form-control-sm" value="<%= u.email || '' %>" readonly></td>
                <td><input form="<%= editFormId %>" type="text" name="contact" class="form-control form-control-sm" value="<%= u.contact || '' %>" readonly></td>
                <td><input form="<%= editFormId %>" type="text" name="address" class="form-control form-control-sm" value="<%= u.address || '' %>" readonly></td>
                <td>
                  <% const roleClass = u.role === 'admin' ? 'pill-admin' : 'pill-user'; %>
                  <span class="pill <%= roleClass %>"><%= u.role === 'admin' ? 'Admin' : 'User' %></span>
                </td>
                <td>
                  <div class="actions">
                    <form action="/users/<%= u.id %>/promote" method="POST" class="d-inline">
                      <button type="submit" class="btn btn-warning btn-sm" <%= u.role === 'admin' ? 'disabled' : '' %>>Promote</button>
                    </form>
                    <form action="/users/<%= u.id %>/delete" method="POST" class="d-inline" onsubmit="return confirm('Remove this user?');">
                      <button type="submit" class="btn btn-danger btn-sm" <%= (u.id === currentUserId || u.role === 'admin') ? 'disabled' : '' %>>Remove</button>
                    </form>
                  </div>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
      <div class="d-flex justify-content-between align-items-center mt-3 flex-wrap gap-2 mini-meta">
        <div>Showing <%= users.length %> users</div>
        <div class="pagination pagination-sm mb-0">
          <span class="page-link">1</span>
          <span class="page-link disabled">...</span>
        </div>
      </div>
    </div>
  </div>

  <script>
    (function() {
      const searchInput = document.getElementById('user-search');
      const roleFilter = document.getElementById('permission-filter');
      const rows = Array.from(document.querySelectorAll('#users-table tbody tr'));

      function applyFilters() {
        const search = (searchInput.value || '').toLowerCase();
        const role = roleFilter.value;

        rows.forEach(row => {
          const text = row.innerText.toLowerCase();
          const rowRole = row.getAttribute('data-role');
          const matchSearch = text.includes(search);
          const matchRole = role === 'all' || rowRole === role;
          row.style.display = matchSearch && matchRole ? '' : 'none';
        });
      }

      searchInput.addEventListener('input', applyFilters);
      roleFilter.addEventListener('change', applyFilters);
    })();

    function toggleAll(source) {
      document.querySelectorAll('#users-table tbody input[type=\"checkbox\"]').forEach(cb => {
        cb.checked = source.checked;
      });
    }
  </script>
</body>
</html>
