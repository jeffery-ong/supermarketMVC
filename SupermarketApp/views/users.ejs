<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Users</title>
</head>
<body>
  <%- include('navbar') %>

  <div class="container my-4">
    <h2 class="mb-3">User Management</h2>

    <% if (messages && messages.error && messages.error.length) { %>
      <div class="alert alert-danger">
        <% messages.error.forEach(function(msg) { %>
          <div><%= msg %></div>
        <% }) %>
      </div>
    <% } %>
    <% if (messages && messages.success && messages.success.length) { %>
      <div class="alert alert-success">
        <% messages.success.forEach(function(msg) { %>
          <div><%= msg %></div>
        <% }) %>
      </div>
    <% } %>

    <div class="d-none">
      <% users.forEach(function(u) { %>
        <form id="edit-<%= u.id %>" action="/users/<%= u.id %>/edit" method="POST"></form>
      <% }) %>
    </div>

    <div class="table-responsive">
      <table class="table table-striped align-middle">
        <thead>
          <tr>
            <th>Username</th>
            <th>Email</th>
            <th>Contact</th>
            <th>Address</th>
            <th>Role</th>
            <th style="width: 250px;">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% users.forEach(function(u) { 
               const editFormId = `edit-${u.id}`;
          %>
            <tr>
              <td><input form="<%= editFormId %>" type="text" name="username" class="form-control form-control-sm" value="<%= u.username %>" required></td>
              <td><input form="<%= editFormId %>" type="email" name="email" class="form-control form-control-sm" value="<%= u.email || '' %>"></td>
              <td><input form="<%= editFormId %>" type="text" name="contact" class="form-control form-control-sm" value="<%= u.contact || '' %>"></td>
              <td><input form="<%= editFormId %>" type="text" name="address" class="form-control form-control-sm" value="<%= u.address || '' %>"></td>
              <td>
                <% if (u.role === 'admin') { %>
                  <input type="hidden" form="<%= editFormId %>" name="role" value="admin">
                  <input type="text" class="form-control form-control-sm" value="Admin" readonly>
                <% } else { %>
                  <select form="<%= editFormId %>" name="role" class="form-select form-select-sm">
                    <option value="user" <%= u.role === 'user' ? 'selected' : '' %>>User</option>
                    <option value="admin" <%= u.role === 'admin' ? 'selected' : '' %>>Admin</option>
                  </select>
                <% } %>
              </td>
              <td>
                <div class="d-flex gap-2 flex-wrap">
                  <button form="<%= editFormId %>" type="submit" class="btn btn-primary btn-sm">Save</button>
                  <form action="/users/<%= u.id %>/promote" method="POST" class="d-inline">
                    <button type="submit" class="btn btn-warning btn-sm" <%= u.role === 'admin' ? 'disabled' : '' %>>Promote</button>
                  </form>
                  <form action="/users/<%= u.id %>/delete" method="POST" class="d-inline" onsubmit="return confirm('Remove this user?');">
                    <button type="submit" class="btn btn-danger btn-sm" <%= (u.id === currentUserId || u.role === 'admin') ? 'disabled' : '' %>>Remove</button>
                  </form>
                </div>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</body>
</html>
