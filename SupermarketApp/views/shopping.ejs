<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title><%= title %></title>
  <link rel="stylesheet" href="/styles.css" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <style>
    .favorite-highlight {
      background: #fff8e1;
      border: 1px solid #f0c24b;
    }
    .discounted-card {
      border: 1px solid #dc3545;
      box-shadow: 0 10px 25px rgba(220, 53, 69, 0.12);
    }
    .discount-pill {
      background: linear-gradient(135deg, #dc3545, #fd7e14);
      color: #fff;
      font-weight: 700;
      border-radius: 999px;
      padding: 4px 10px;
      font-size: 0.8rem;
    }
    .price-new {
      color: #c1121f;
    }
  </style>
</head>
<body>
  <%- include('navbar') %>

  <main class="container py-5 shop-layout">
    <% const hasNoResults = (typeof noResults !== 'undefined' && !!noResults); %>
    <% const cleanedErrors = (messages && Array.isArray(messages.error))
      ? messages.error.filter(msg => hasNoResults || msg !== 'Stuff is not found')
      : []; %>

    <% if (hasNoResults) { %>
      <div class="alert alert-danger mb-4">
        Stuff is not found
      </div>
    <% } else if (cleanedErrors.length) { %>
      <div class="alert alert-danger mb-4">
        <%= cleanedErrors.join(', ') %>
      </div>
    <% } %>
    <% if (messages && messages.success && messages.success.length) { %>
      <div class="alert alert-success mb-4">
        <%= messages.success.join(', ') %>
      </div>
    <% } %>

    <h1 class="mb-4 text-center">Shop</h1>
    <% const searchVal = (typeof search !== 'undefined' && search != null) ? search : ''; %>
    <% const sortVal = (typeof sort !== 'undefined' && sort != null) ? sort : ''; %>
    <% const categoryVal = (typeof category !== 'undefined' && category != null) ? category : ''; %>
    <% const categoryOptions = (typeof categories !== 'undefined' && Array.isArray(categories)) ? categories : []; %>

    <form class="row g-3 mb-4 justify-content-center" method="GET" action="/shopping">
      <div class="col-lg-6 col-md-12">
        <input type="text" name="search" class="form-control" placeholder="Search products or categories" value="<%= searchVal %>">
      </div>
      <div class="col-md-6 col-lg-3">
        <select name="category" class="form-select" onchange="this.form.submit()">
          <option value="" <%= categoryVal === '' ? 'selected' : '' %>>All categories</option>
          <% categoryOptions.forEach(cat => { %>
            <option value="<%= cat %>" <%= categoryVal === cat ? 'selected' : '' %>><%= cat %></option>
          <% }) %>
        </select>
      </div>
      <div class="col-md-6 col-lg-3">
        <select name="sort" class="form-select" onchange="this.form.submit()">
          <option value="" <%= sortVal === '' ? 'selected' : '' %>>Default order</option>
          <option value="name-asc" <%= sortVal === 'name-asc' ? 'selected' : '' %>>Name: A to Z</option>
          <option value="name-desc" <%= sortVal === 'name-desc' ? 'selected' : '' %>>Name: Z to A</option>
          <option value="price-asc" <%= sortVal === 'price-asc' ? 'selected' : '' %>>Price: Low to High</option>
          <option value="price-desc" <%= sortVal === 'price-desc' ? 'selected' : '' %>>Price: High to Low</option>
          <option value="discounted-only" <%= sortVal === 'discounted-only' ? 'selected' : '' %>>Discounted items</option>
        </select>
      </div>
    </form>

    <% const favs = (typeof favorites !== 'undefined' && Array.isArray(favorites)) ? favorites : []; %>
    <% if (favs.length) { %>
      <section class="container py-4">
        <div class="d-flex align-items-center mb-3">
          <h2 class="h5 mb-0 me-2">Favourites</h2>
          <span class="badge bg-warning text-dark">Saved</span>
        </div>
        <div class="row g-3">
          <% favs.forEach(product => { %>
            <div class="col-md-3">
              <%- include('partials/productCard', { product: product, session: session, favouriteHighlight: true }) %>
            </div>
          <% }) %>
        </div>
      </section>
    <% } %>

    <section class="container py-4">
      <h2 class="h5 mb-3">Products</h2>
      <div class="row g-3">
        <% (products || []).forEach(product => { %>
          <div class="col-md-3">
            <%- include('partials/productCard', { product: product, session: session }) %>
          </div>
        <% }) %>
      </div>
    </section>
  </main>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

