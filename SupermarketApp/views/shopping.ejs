<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title><%= title %></title>
  <link rel="stylesheet" href="/styles.css" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
  <%- include('navbar') %>

  <main class="container py-5 shop-layout">
    <h1 class="mb-4 text-center">Shop</h1>
    <% const searchVal = (typeof search !== 'undefined' && search != null) ? search : ''; %>

    <form class="row g-3 mb-4 justify-content-center" method="GET" action="/shopping">
      <div class="col-md-6">
        <input type="text" name="search" class="form-control" placeholder="Search products or categories" value="<%= searchVal %>">
      </div>
      <div class="col-md-2 d-grid">
        <button type="submit" class="btn btn-outline-primary">Search</button>
      </div>
    </form>

    <% const favs = (products || []).filter(p => p.isFavorite); %>
    <% const nonFavs = (products || []).filter(p => !p.isFavorite); %>

    <% if (favs.length) { %>
      <section class="container py-4">
        <div class="d-flex align-items-center mb-3">
          <h2 class="h4 mb-0 me-2">Favourites</h2>
          <span class="badge bg-warning text-dark">Favourite</span>
        </div>
        <div class="row g-3">
          <% favs.forEach(product => { %>
            <div class="col-md-3">
              <%- include('partials/productCard', { product: product, session: session }) %>
            </div>
          <% }) %>
        </div>
      </section>
    <% } %>

    <section class="container py-4">
      <h2 class="h5 mb-3">All Products</h2>
      <div class="row g-3">
        <% nonFavs.forEach(product => { %>
          <div class="col-md-3">
            <%- include('partials/productCard', { product: product, session: session }) %>
          </div>
        <% }) %>
      </div>
    </section>
  </main>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
