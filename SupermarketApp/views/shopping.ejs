<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title><%= title %></title>
  <link rel="stylesheet" href="/styles.css" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
  <%- include('navbar') %>

  <main class="container py-5 shop-layout">
    <h1 class="mb-4 text-center">Shop</h1>

    <% const featured = (topSellers && topSellers.length) ? topSellers : products.slice(0, 3); %>
    <% if (featured.length) { %>
      <section class="mb-5 top-sellers-section">
        <h2 class="h4 mb-3 text-center">Top Sellers</h2>
        <div class="row g-4 justify-content-center">
          <% featured.forEach(product => { %>
            <div class="col-12 col-md-6 col-lg-4 d-flex">
              <div class="card product-card-lg shadow-sm w-100">
                <div class="product-thumb-wrapper">
                  <img src="<%= product.image %>" class="card-img-top product-thumb-lg" alt="<%= product.name %>" />
                </div>
                <div class="card-body d-flex flex-column text-center">
                  <h5 class="card-title mb-1">
                    <a class="text-decoration-none text-dark" href="/product/<%= product.id %>"><%= product.name %></a>
                  </h5>
                  <a href="/product/<%= product.id %>" class="small text-primary mb-3">View details</a>
                  <p class="fw-semibold">$<%= product.price.toFixed(2) %></p>
                  <p class="text-muted small mb-3">Stock: <%= product.stock %></p>
                  <form action="/cart/add" method="POST" class="mt-auto">
                    <input type="hidden" name="productId" value="<%= product.id %>" />
                    <div class="input-group input-group-sm">
                      <input type="number" name="quantity" value="1" min="1" max="<%= product.stock %>" class="form-control text-center" />
                      <button type="submit" class="btn btn-primary">Add</button>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          <% }) %>
        </div>
      </section>
    <% } %>

    <section class="all-products-section">
      <h2 class="h5 text-center mb-4">All Products</h2>
      <div class="row g-4 justify-content-center">
        <% products.forEach(product => { %>
          <div class="col-12 col-sm-6 col-md-4 col-lg-3 d-flex">
            <div class="card product-card-sm shadow-sm w-100">
              <div class="product-thumb-wrapper">
                <img src="<%= product.image %>" class="card-img-top product-thumb-sm" alt="<%= product.name %>" />
              </div>
              <div class="card-body d-flex flex-column text-center">
                <h5 class="card-title mb-1">
                  <a href="/product/<%= product.id %>" class="text-decoration-none text-dark"><%= product.name %></a>
                </h5>
                <a href="/product/<%= product.id %>" class="small text-primary mb-3">View details</a>
                <p class="fw-semibold">$<%= product.price.toFixed(2) %></p>
                <p class="text-muted small mb-3">Stock: <%= product.stock %></p>
                <form action="/cart/add" method="POST" class="mt-auto">
                  <input type="hidden" name="productId" value="<%= product.id %>" />
                  <div class="input-group input-group-sm">
                    <input type="number" name="quantity" value="1" min="1" max="<%= product.stock %>" class="form-control text-center" />
                    <button type="submit" class="btn btn-primary">Add</button>
                  </div>
                </form>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    </section>
  </main>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
