<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title><%= title %></title>
  <link rel="stylesheet" href="/styles.css" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
  <%- include('navbar') %>

  <main class="container py-5 shop-layout">
    <h1 class="mb-4 text-center">Shop</h1>

    <% if (Array.isArray(topSellers) && topSellers.length) { %>
      <section class="container py-4">
        <h2 class="h4 mb-3">Top Sellers</h2>
        <div class="row g-3">
          <% topSellers.forEach(product => { %>
            <div class="col-md-3">
              <div class="card h-100 border-success">
                <img src="<%= product.image %>" class="card-img-top" alt="<%= product.name %>">
                <div class="card-body">
                  <h5 class="card-title"><%= product.name %></h5>
                  <p class="card-text fw-semibold">$<%= Number(product.price).toFixed(2) %></p>
                </div>
              </div>
            </div>
          <% }) %>
        </div>
      </section>
    <% } %>

    <section class="container py-4">
      <div class="row g-3">
        <% (Array.isArray(products) ? products : []).forEach(product => { %>
          <div class="col-md-3">
            <div class="card h-100">
              <img src="<%= product.image %>" class="card-img-top" alt="<%= product.name %>">
              <div class="card-body d-flex flex-column">
                <h5 class="card-title"><%= product.name %></h5>
                <p class="card-text fw-semibold">$<%= Number(product.price).toFixed(2) %></p>
                <% if (session && session.user && session.user.role === 'admin') { %>
                  <form action="/products/<%= product.id %>/favorite" method="POST" class="mt-auto">
                    <input type="hidden" name="favorite" value="<%= product.isFavorite ? 0 : 1 %>">
                    <button type="submit" class="btn <%= product.isFavorite ? 'btn-warning' : 'btn-outline-warning' %> w-100">
                      <%= product.isFavorite ? 'Remove from Top Sellers' : 'Mark as Top Seller' %>
                    </button>
                  </form>
                <% } %>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    </section>
  </main>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
