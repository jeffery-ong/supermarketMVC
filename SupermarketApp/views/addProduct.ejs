<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Supermarket App</title>
  <style>
    body { background: #f5f7fb; color: #0f172a; }
    .card-shell {
      background: #fff;
      border: 1px solid #e5e7eb;
      border-radius: 14px;
      padding: 24px;
      box-shadow: 0 10px 28px rgba(15, 23, 42, 0.08);
      max-width: 720px;
    }
    .field-label { font-weight: 600; color: #111827; }
    .subtext { color: #6b7280; font-size: 13px; }
    .dropzone {
      border: 2px dashed #d4d4d8;
      border-radius: 12px;
      background: #f8fafc;
      padding: 24px;
      text-align: center;
      transition: border-color 0.2s, background 0.2s;
    }
    .dropzone:hover { border-color: #94a3b8; background: #f1f5f9; }
    .btn-primary-modern {
      background: linear-gradient(135deg, #1d4ed8, #2563eb);
      border: none;
      color: #fff;
      font-weight: 700;
      border-radius: 999px;
      padding: 10px 18px;
      box-shadow: 0 10px 20px rgba(37, 99, 235, 0.25);
    }
    .btn-primary-modern:disabled { opacity: 0.75; }
    .link-muted { color: #4b5563; text-decoration: underline; }
    .section-divider { border-top: 1px solid #e5e7eb; margin: 18px 0; }
    .file-input-hidden {
      position: absolute;
      width: 1px;
      height: 1px;
      padding: 0;
      margin: -1px;
      overflow: hidden;
      clip: rect(0, 0, 0, 0);
      white-space: nowrap;
      border: 0;
    }
  </style>
</head>
<body>
  <%- include('navbar') %>

  <div class="container mt-4 d-flex justify-content-center">
    <div class="card-shell w-100">
      <h3 class="mb-3">Product Information</h3>
      <form action="/addProduct" method="POST" enctype="multipart/form-data">
        <div class="mb-3">
          <label for="image" class="field-label d-block mb-2">Image</label>
          <label for="image" class="dropzone w-100">
            <div id="drop-message">
              <strong class="text-primary">Click to upload</strong> or drag and drop
              <div class="subtext">PDF, JPG, JPEG, PNG less than 5MB.</div>
            </div>
            <div id="preview-wrapper" class="mt-2" style="display:none;">
              <img id="preview-img" alt="Preview" style="max-width: 100%; max-height: 240px; border-radius: 10px; border: 1px solid #e5e7eb; background:#fff;">
              <div class="subtext mt-1" id="preview-name"></div>
            </div>
          </label>
          <input class="form-control file-input-hidden" type="file" id="image" name="image" accept="image/*" required>
        </div>

        <div class="mb-3">
          <label for="name" class="field-label">Name</label>
          <input type="text" class="form-control" id="name" name="name" placeholder="Name Product" required>
        </div>

        <div class="mb-3">
          <label for="description" class="field-label">Description <span class="subtext">(Optional)</span></label>
          <textarea class="form-control" id="description" name="description" rows="4" placeholder="Name Product"></textarea>
        </div>

        <div class="section-divider"></div>
        <div class="mt-3 row g-3">
          <div class="col-md-6">
            <label for="quantity" class="field-label">Quantity</label>
            <input type="number" class="form-control" id="quantity" name="quantity" min="0" step="1" required>
          </div>
          <div class="col-md-6">
            <label for="price" class="field-label">Price ($)</label>
            <input type="number" class="form-control" id="price" name="price" min="0" step="0.01" required>
          </div>
          <div class="col-md-6">
            <label for="discount" class="field-label">Discount (%)</label>
            <input type="number" class="form-control" id="discount" name="discount" min="0" step="0.01" value="0">
          </div>
          <div class="col-md-6">
            <label for="category" class="field-label">Category</label>
            <input type="text" class="form-control" id="category" name="category" placeholder="e.g. Beverages" required>
          </div>
        </div>

        <div class="d-flex justify-content-between align-items-center mt-4">
          <a href="/inventory" class="link-muted">Cancel</a>
          <button type="submit" class="btn btn-primary-modern">Continue â†’</button>
        </div>
      </form>
    </div>
  </div>

  <script>
    // Show file name on selection to reassure user
    const fileInput = document.getElementById('image');
    const dropLabel = document.querySelector('label.dropzone');
    const previewImg = document.getElementById('preview-img');
    const previewWrapper = document.getElementById('preview-wrapper');
    const previewName = document.getElementById('preview-name');
    const dropMessage = document.getElementById('drop-message');

    function showPreview(file) {
      if (!file || !file.type.startsWith('image/')) {
        previewWrapper.style.display = 'none';
        previewImg.src = '';
        previewName.textContent = '';
        dropMessage.style.display = '';
        return;
      }
      const reader = new FileReader();
      reader.onload = e => {
        previewImg.src = e.target.result;
        previewWrapper.style.display = 'block';
        previewName.textContent = file.name;
        dropMessage.style.display = 'none';
      };
      reader.readAsDataURL(file);
    }

    if (fileInput) {
      fileInput.addEventListener('change', () => {
        showPreview(fileInput.files && fileInput.files[0]);
      });
    }

    // Clicking the dropzone triggers file input
    if (dropLabel && fileInput) {
      dropLabel.addEventListener('click', (e) => {
        e.preventDefault();
        fileInput.click();
      });
    }
  </script>
</body>
</html>
