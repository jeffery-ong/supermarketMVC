<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Your Cart</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <%- include('navbar') %>

  <% const errs = (typeof errors !== 'undefined' && Array.isArray(errors)) ? errors : []; %>
  <% const msgs = (typeof messages !== 'undefined' && Array.isArray(messages)) ? messages : []; %>
  <% const items = (typeof cart !== 'undefined' && Array.isArray(cart)) ? cart : []; %>

  <div class="container mt-4">
    <% if (errs.length) { %>
      <div class="alert alert-danger"><%= errs.join(', ') %></div>
    <% } %>
    <% if (msgs.length) { %>
      <div class="alert alert-success"><%= msgs.join(', ') %></div>
    <% } %>

    <h2>Shopping Cart</h2>
    <% if (items.length) { %>
      <table class="table table-bordered align-middle text-center">
        <thead>
          <tr>
            <th>Image</th>
            <th>Product</th>
            <th>Quantity</th>
            <th>Subtotal</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% items.forEach(item => { %>
            <tr>
              <td><img src="<%= item.image %>" width="70" alt="<%= item.name %>"></td>
              <td><%= item.name %></td>
              <td>
                <form action="/cart/update/<%= item.productId %>" method="post" class="d-flex justify-content-center gap-2">
                  <input type="number" name="quantity" value="<%= item.quantity %>" min="1" max="<%= item.stock %>" class="form-control form-control-sm text-center" style="width:90px;">
                  <button type="submit" class="btn btn-sm btn-secondary">Update</button>
                </form>
              </td>
              <td>$<%= (item.price * item.quantity).toFixed(2) %></td>
              <td>
                <form action="/cart/remove/<%= item.productId %>" method="post">
                  <button type="submit" class="btn btn-sm btn-danger">Remove</button>
                </form>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>

      <div class="d-flex justify-content-between align-items-center mt-3">
        <h4>Total: $<%= Number(total).toFixed(2) %></h4>
        <form action="/checkout" method="post">
          <button type="submit" class="btn btn-primary">Checkout</button>
        </form>
      </div>

      <div class="mt-3">
        <a href="/shopping" class="btn btn-secondary">Back to Shopping</a>
      </div>
    <% } else { %>
      <p>Your cart is empty.</p>
      <a href="/shopping" class="btn btn-primary">Start Shopping</a>
    <% } %>
  </div>
</body>
</html>
