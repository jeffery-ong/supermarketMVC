<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Payment</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    .summary-thumb {
      width: 48px;
      height: 48px;
      object-fit: cover;
      border-radius: 0.4rem;
      border: 1px solid #e5e5e5;
      background: #f8f9fa;
    }
  </style>
</head>
<body>
  <%- include('navbar') %>

  <%
    const round2 = num => Math.round(Number(num || 0) * 100) / 100;
    const items = Array.isArray(cart) ? cart : [];
    const savedCardSafe = (typeof savedCard !== 'undefined' && savedCard) ? savedCard : null;
    const fallbackSubtotal = items.reduce(
      (sum, i) => round2(sum + round2(Number(i.price || 0) * Number(i.quantity || 1))),
      0
    );
    const summarySubtotal = typeof subtotal !== 'undefined' ? round2(subtotal) : fallbackSubtotal;
    const summaryGst = typeof gst !== 'undefined' ? round2(gst) : round2(summarySubtotal * 0.09);
    const preDeliveryTotal = round2(summarySubtotal + summaryGst);
    const summaryDelivery =
      typeof deliveryFee !== 'undefined' ? round2(deliveryFee) : preDeliveryTotal >= 50 ? 0 : 5;
    // Always recompute final total from the breakdown to avoid stale/partial totals
    const summaryTotal = round2(preDeliveryTotal + summaryDelivery);
  %>

  <div class="container mt-4">
    <div class="row">
      <div class="col-lg-8 mb-3">
        <h2>Payment Details</h2>
        <form action="/payment/confirm" method="POST" class="card p-3 shadow-sm" id="payment-form">
          <div class="mb-3">
            <label class="form-label d-block">Payment Method</label>
            <div class="form-check form-check-inline">
              <input class="form-check-input" type="radio" name="method" id="method-card" value="card" checked>
              <label class="form-check-label" for="method-card">Card</label>
            </div>
            <% if (savedCardSafe && savedCardSafe.last4) { %>
              <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="method" id="method-saved" value="saved">
                <label class="form-check-label" for="method-saved">
                  Saved card (<%= savedCardSafe.label ? savedCardSafe.label + ' · ' : '' %>•••• <%= savedCardSafe.last4 %>)
                </label>
              </div>
              <div class="mt-2 text-muted small">
                Saved for <%= savedCardSafe.card_name || (profile && profile.username) || 'you' %>. Card number is securely masked.
              </div>
            <% } %>
            <div class="form-check form-check-inline">
              <input class="form-check-input" type="radio" name="method" id="method-qr" value="paynow">
              <label class="form-check-label" for="method-qr">PayNow / PayLah (QR)</label>
            </div>
          </div>

          <div id="card-fields">
            <div class="mb-3">
              <label class="form-label">Name on Card</label>
              <input type="text" name="cardName" class="form-control" required>
            </div>
            <div class="mb-3">
              <label class="form-label">Card Number</label>
              <input type="text" name="cardNumber" class="form-control" inputmode="numeric" pattern="[0-9]{16}" minlength="16" maxlength="16" title="Enter exactly 16 digits" required oninput="this.value=this.value.replace(/[^0-9]/g,'').slice(0,16)">
            </div>
            <div class="row g-3 mb-3">
              <div class="col-md-6">
                <label class="form-label">Expiry (MM/YY)</label>
                <input type="text" name="expiry" class="form-control" placeholder="MM/YY" pattern="(0[1-9]|1[0-2])/[2-9][5-9]" title="Use MM/YY with year 25 or later" required oninput="this.value=this.value.replace(/[^0-9/]/g,'').slice(0,5)">
              </div>
              <div class="col-md-6">
                <label class="form-label">CVV</label>
                <input type="text" name="cvv" class="form-control" inputmode="numeric" pattern="[0-9]{3}" maxlength="3" title="Enter 3 digits" required oninput="this.value=this.value.replace(/[^0-9]/g,'').slice(0,3)">
              </div>
            </div>
          </div>

          <div id="qr-fields" class="mb-3 d-none">
            <p class="text-muted mb-2">Scan to pay with PayNow / PayLah, then click Next to generate your invoice.</p>
            <div class="border rounded p-3 text-center bg-light">
              <img src="/images/qr.png" alt="PayNow / PayLah QR" class="img-fluid" style="max-width: 320px;">
            </div>
          </div>

            <div class="mb-3">
              <label class="form-label">Billing Address</label>
              <textarea name="billing" rows="2" class="form-control"></textarea>
            </div>
          <div class="d-flex justify-content-between align-items-center">
            <a href="/cart" class="btn btn-secondary">Back to Cart</a>
            <button type="submit" id="pay-button" class="btn btn-success" data-default-text="Pay $<%= summaryTotal.toFixed(2) %>">Pay $<%= summaryTotal.toFixed(2) %></button>
          </div>
        </form>
      </div>

      <div class="col-lg-4">
        <h3>Order Summary</h3>
        <div class="card shadow-sm">
          <div class="card-body">
            <% if (!items.length) { %>
              <p class="text-muted">No items in cart.</p>
            <% } else { %>
              <ul class="list-group list-group-flush">
                <% items.forEach(item => { %>
                  <li class="list-group-item d-flex justify-content-between align-items-center">
                    <div class="d-flex align-items-center gap-2">
                      <img src="<%= item.image || (item.product && item.product.image) || '/images/placeholder-product.jpg' %>" alt="<%= item.name %>" class="summary-thumb">
                      <div>
                        <div class="fw-semibold"><%= item.name %></div>
                        <small class="text-muted">Qty: <%= item.quantity %></small>
                      </div>
                    </div>
                    <div>$<%= (item.price * item.quantity).toFixed(2) %></div>
                  </li>
                <% }) %>
              </ul>
              <div class="d-flex justify-content-between mt-3">
                <span>Subtotal</span>
                <span>$<%= summarySubtotal.toFixed(2) %></span>
              </div>
              <div class="d-flex justify-content-between">
                <span>GST (9%)</span>
                <span>$<%= summaryGst.toFixed(2) %></span>
              </div>
              <div class="d-flex justify-content-between">
                <span>Delivery Fee</span>
                <span>$<%= summaryDelivery.toFixed(2) %></span>
              </div>
              <hr class="my-2">
              <div class="d-flex justify-content-between align-items-center">
                <strong>Total:</strong>
                <strong>$<%= summaryTotal.toFixed(2) %></strong>
              </div>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script>
    (function() {
      const methodCard = document.getElementById('method-card');
      const methodQr = document.getElementById('method-qr');
      const methodSaved = document.getElementById('method-saved');
      const cardFields = document.getElementById('card-fields');
      const qrFields = document.getElementById('qr-fields');
      const payButton = document.getElementById('pay-button');
      const cardInputs = cardFields.querySelectorAll('input');

      function toggleFields() {
        const useQr = methodQr.checked;
        const useSaved = methodSaved && methodSaved.checked;
        const hideCard = useQr || useSaved;
        cardFields.classList.toggle('d-none', hideCard);
        qrFields.classList.toggle('d-none', !useQr);
        payButton.textContent = useQr ? 'Next' : payButton.dataset.defaultText;
        cardInputs.forEach(input => {
          input.required = !hideCard;
          input.disabled = hideCard; // prevent browser from re-validating card inputs when using QR/saved
          if (hideCard) input.value = ''; // clear stale card data when switching away
        });
      }

      methodCard.addEventListener('change', toggleFields);
      methodQr.addEventListener('change', toggleFields);
      if (methodSaved) methodSaved.addEventListener('change', toggleFields);
      if (methodSaved) methodSaved.checked = true; // default to saved card when available
      toggleFields();
    })();
  </script>
</body>
</html>
