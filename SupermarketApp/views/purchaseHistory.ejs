<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= title %></title>
  <link rel="stylesheet" href="/styles.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <%- include('navbar') %>

  <main class="container py-5">
    <h1 class="mb-4 text-center"><%= isAdmin ? 'All Purchase History' : 'Your Purchase History' %></h1>

    <% if (purchases && purchases.length) { %>
      <div class="table-responsive">
        <table class="table table-striped align-middle text-center">
          <thead class="table-dark">
            <tr>
              <th>#</th>
              <% if (isAdmin) { %><th>User</th><% } %>
              <th>Product</th>
              <th>Quantity</th>
              <th>Total Paid</th>
              <th>Purchased At</th>
            </tr>
          </thead>
          <tbody>
            <% purchases.forEach((purchase, idx) => { %>
              <tr>
                <td><%= idx + 1 %></td>
                <% if (isAdmin) { %><td><%= purchase.userId %></td><% } %>
                <td class="text-start">
                  <div class="d-flex align-items-center gap-3">
                    <% if (purchase.product && purchase.product.image) { %>
                      <img src="<%= purchase.product.image %>" alt="<%= purchase.product.name %>" class="rounded" style="width:70px;height:70px;object-fit:contain;background:#f7f8fb;">
                    <% } else { %>
                      <span class="badge bg-secondary">N/A</span>
                    <% } %>
                    <div>
                      <div class="fw-semibold"><%= purchase.product ? purchase.product.name : purchase.productName %></div>
                      <small class="text-muted">Product ID: <%= purchase.productId %></small>
                    </div>
                  </div>
                </td>
                <td><%= purchase.quantity %></td>
                <td>$<%= Number(purchase.total).toFixed(2) %></td>
                <td><%= new Date(purchase.purchasedAt).toLocaleString() %></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    <% } else { %>
      <div class="text-center py-5">
        <img src="/images/empty-box.svg" alt="No purchases" style="max-width:160px;" />
        <h2 class="mt-3">No purchases yet</h2>
        <p class="text-muted">Browse the shop and complete a checkout to see your orders here.</p>
        <a href="/shopping" class="btn btn-primary mt-2">Go Shopping</a>
      </div>
    <% } %>
  </main>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>