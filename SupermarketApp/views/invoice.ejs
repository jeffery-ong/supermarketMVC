<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= title || 'Invoice' %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    .invoice-thumb {
      width: 64px;
      height: 64px;
      object-fit: cover;
      border-radius: 0.5rem;
      border: 1px solid #e5e5e5;
      background: #f8f9fa;
    }
    @media print {
      .print-hide,
      .navbar {
        display: none !important;
      }
      body {
        padding: 0 !important;
      }
    }
  </style>
</head>
<body>
  <%- include('navbar') %>
  <div class="container mt-4">
    <%
      const issuedAt = new Date(invoice.issuedAt).toLocaleString();
      const subtotal = Number(invoice.subtotal ?? invoice.total ?? 0);
      const gst = Number(invoice.gst || 0);
      const deliveryFee = Number(invoice.deliveryFee || 0);
      const total = Number(invoice.total ?? (subtotal + gst + deliveryFee));
    %>
    <div class="d-flex justify-content-between align-items-center mb-3">
      <div>
        <h2 class="mb-1">Invoice</h2>
        <div class="text-muted">Invoice No: <%= invoice.number %></div>
        <div class="text-muted">Date: <%= issuedAt %></div>
      </div>
      <div class="text-end">
        <div class="fw-semibold"><%= invoice.customer.name %></div>
        <% if (invoice.customer.billing) { %>
          <div class="text-muted" style="white-space: pre-line;"><%= invoice.customer.billing %></div>
        <% } %>
        <div class="text-muted mt-2">
          Paid with: <%= invoice.payment.method %>
          <% if (invoice.payment.last4) { %>
            ending <%= invoice.payment.last4 %>
          <% } %>
        </div>
      </div>
    </div>
    <% if (invoice.shipping && (invoice.shipping.address || invoice.shipping.name || invoice.shipping.phone || invoice.shipping.email)) { %>
      <div class="row mb-3">
        <div class="col-md-6">
          <div class="card shadow-sm h-100">
            <div class="card-body">
              <div class="fw-semibold mb-2">Shipping To</div>
              <% if (invoice.shipping.name) { %>
                <div><%= invoice.shipping.name %></div>
              <% } %>
              <% if (invoice.shipping.phone) { %>
                <div class="text-muted small">Phone: <%= invoice.shipping.phone %></div>
              <% } %>
              <% if (invoice.shipping.email) { %>
                <div class="text-muted small">Email: <%= invoice.shipping.email %></div>
              <% } %>
              <% if (invoice.shipping.address) { %>
                <div class="text-muted mt-2" style="white-space: pre-line;"><%= invoice.shipping.address %></div>
              <% } %>
            </div>
          </div>
        </div>
      </div>
    <% } %>

    <div class="card shadow-sm">
      <div class="card-body">
        <table class="table align-middle mb-3">
          <thead>
            <tr>
              <th scope="col">Image</th>
              <th scope="col">Item</th>
              <th scope="col" class="text-center">Qty</th>
              <th scope="col" class="text-end">Price</th>
              <th scope="col" class="text-end">Subtotal</th>
            </tr>
          </thead>
          <tbody>
            <% invoice.items.forEach(item => { %>
              <tr>
                <td class="align-middle" style="width: 80px;">
                  <img src="<%= item.image %>" alt="<%= item.name %>" class="invoice-thumb">
                </td>
                <td><%= item.name %></td>
                <td class="text-center"><%= item.quantity %></td>
                <td class="text-end">$<%= Number(item.price).toFixed(2) %></td>
                <td class="text-end">$<%= Number(item.subtotal).toFixed(2) %></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
        <div class="d-flex justify-content-end">
          <div class="text-end" style="min-width: 240px;">
            <div class="d-flex justify-content-between">
              <span>Subtotal</span>
              <span>$<%= subtotal.toFixed(2) %></span>
            </div>
            <div class="d-flex justify-content-between">
              <span>GST (9%)</span>
              <span>$<%= gst.toFixed(2) %></span>
            </div>
            <% if (deliveryFee > 0) { %>
              <div class="d-flex justify-content-between">
                <span>Delivery Fee</span>
                <span>$<%= deliveryFee.toFixed(2) %></span>
              </div>
            <% } %>
            <hr class="my-2">
            <div class="d-flex justify-content-between fw-semibold fs-5">
              <span>Total</span>
              <span>$<%= total.toFixed(2) %></span>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="d-flex justify-content-between align-items-center mt-3 print-hide">
      <a href="/shopping" class="btn btn-outline-secondary">Continue Shopping</a>
      <div class="d-flex gap-2">
        <a href="/purchase-history" class="btn btn-success">View Purchase History</a>
        <button id="downloadInvoiceBtn" class="btn btn-primary" type="button">Download Invoice</button>
      </div>
    </div>
  </div>
  <script>
    (function () {
      const downloadBtn = document.getElementById('downloadInvoiceBtn');
      if (!downloadBtn) return;
      const originalTitle = document.title;
      const invoiceNo = '<%= invoice.number %>';

      downloadBtn.addEventListener('click', () => {
        document.title = `Invoice-${invoiceNo}`;
        window.print();
        document.title = originalTitle;
      });
    })();
  </script>
</body>
</html>
