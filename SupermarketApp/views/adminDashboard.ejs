<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= title %></title>
  <link rel="stylesheet" href="/styles.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background: #e9ecef;
      color: #212529;
      min-height: 100vh;
    }
    .card-glass {
      background: #fdfdfd;
      border: 1px solid #e1e4e8;
      box-shadow: 0 6px 18px rgba(0,0,0,0.06);
      color: #212529;
    }
    .metric-value {
      font-size: 1.6rem;
      font-weight: 700;
    }
    .metric-label {
      text-transform: uppercase;
      letter-spacing: 0.08em;
      font-size: 0.8rem;
      color: #6c757d;
    }
    .section-title {
      font-size: 1.1rem;
      font-weight: 700;
      letter-spacing: 0.04em;
    }
    .table thead {
      text-transform: uppercase;
      font-size: 0.85rem;
    }
  </style>
</head>
<body>
  <%- include('navbar') %>

  <main class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <div>
        <div class="text-muted">Admin Dashboard</div>
        <h1 class="mb-0">Key Statistics</h1>
      </div>
      <div class="d-flex gap-2">
        <a href="/inventory" class="btn btn-light btn-sm text-dark border">Manage Inventory</a>
        <a href="/users" class="btn btn-light btn-sm text-dark border">Manage Users</a>
      </div>
    </div>

    <div class="row g-3 mb-4">
      <div class="col-md-3">
        <a href="/admin/revenue" class="text-decoration-none">
          <div class="card card-glass p-3 h-100">
            <div class="metric-label">Total Revenue</div>
            <div class="metric-value">$<%= stats.revenue %></div>
          </div>
        </a>
      </div>
      <div class="col-md-3">
        <a href="/purchase-history" class="text-decoration-none">
          <div class="card card-glass p-3 h-100">
            <div class="metric-label">Total Orders</div>
            <div class="metric-value"><%= stats.orders %></div>
          </div>
        </a>
      </div>
      <div class="col-md-3">
        <a href="/users" class="text-decoration-none">
          <div class="card card-glass p-3 h-100">
            <div class="metric-label">Total Users</div>
            <div class="metric-value"><%= stats.users %></div>
          </div>
        </a>
      </div>
      <div class="col-md-3">
        <a href="/inventory" class="text-decoration-none">
          <div class="card card-glass p-3 h-100">
            <div class="metric-label">Products</div>
            <div class="metric-value"><%= stats.products %></div>
          </div>
        </a>
      </div>
    </div>

    <div class="row g-3 mb-4">
      <div class="col-md-6">
        <div class="card card-glass p-3 h-100">
          <div class="section-title mb-2">Best Selling Item</div>
          <% if (bestProduct) { %>
            <div class="d-flex align-items-center justify-content-between">
              <div>
                <div class="fw-semibold"><%= bestProduct.name %></div>
                <div class="text-muted">Sold: <%= bestProduct.sold %> units</div>
              </div>
              <div class="badge bg-light text-dark px-3 py-2">Revenue $<%= bestProduct.revenue %></div>
            </div>
          <% } else { %>
            <div class="text-muted">No sales yet.</div>
          <% } %>
        </div>
      </div>
      <div class="col-md-6">
        <div class="card card-glass p-3 h-100">
          <div class="section-title mb-2">Top Customer</div>
          <% if (topCustomer) { %>
            <div class="d-flex align-items-center justify-content-between">
              <div>
                <div class="fw-semibold"><%= topCustomer.name %></div>
                <div class="text-muted"><%= topCustomer.email || 'No email' %></div>
              </div>
              <div class="badge bg-light text-dark px-3 py-2">Spent $<%= topCustomer.spent %></div>
            </div>
          <% } else { %>
            <div class="text-muted">No customers yet.</div>
          <% } %>
        </div>
      </div>
    </div>

    <div class="card card-glass p-3">
      <div class="d-flex justify-content-between align-items-center mb-2">
        <div class="section-title mb-0">Recent Orders</div>
        <a href="/purchase-history" class="btn btn-outline-light btn-sm">View Purchase History</a>
      </div>
      <% if (!recentOrders.length) { %>
        <div class="text-muted">No orders yet.</div>
      <% } else { %>
        <div class="table-responsive">
          <table class="table align-middle mb-0">
            <thead>
              <tr>
                <th scope="col">Order</th>
                <th scope="col">Customer</th>
                <th scope="col">Total</th>
                <th scope="col">Date</th>
              </tr>
            </thead>
            <tbody>
              <% recentOrders.forEach(o => { %>
                <tr>
                  <td>#<%= o.id %> Â· <span class="text-muted"><%= o.productName %></span></td>
                  <td>
                    <div class="fw-semibold"><%= o.user %></div>
                    <% if (o.email) { %><div class="text-muted small"><%= o.email %></div><% } %>
                  </td>
                  <td>$<%= o.total %></td>
                  <td><%= new Date(o.purchasedAt).toLocaleString() %></td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      <% } %>
    </div>
  </main>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
